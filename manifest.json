{
  "manifest_version": 2,

  "name": "Time Waste Analyzer plugin",
  "description": "This extension will analyze your time browsing the Internet.",
  "version": "1.0",
  

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  
  "background": {
    "page": "popup.html"
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "identity.email",
    "http://localhost/*"
  ]
}